<Window x:Class="CADApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CADApp"
        mc:Ignorable="d"
        Title="Find and Replace"
        Height="800"
        Width="918"
        Name="MainControlWindow">
    <Window.Resources>
        <CollectionViewSource x:Key="ItemCollectionViewSource" CollectionViewType="ListCollectionView"/>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Margin="10" Grid.Row="0">
            <Grid.Resources>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Margin" Value="0,0,10,0" />
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" Text="{Binding FilterText}" VerticalContentAlignment="Center" FontSize="14" Name="findText"/>
            <Button Content="Find" Grid.Column="1" FontSize="14" Name="findButton" Click="findButton_Click"/>
        </Grid>
        <Grid Margin="10" Grid.Row="1">
            <Grid.Resources>
                <Style TargetType="{x:Type TextBox}">
                    <Setter Property="Margin" Value="0,0,10,0" />
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" VerticalContentAlignment="Center" FontSize="14" Name="blah2"/>
            <Button Content="Replace" Grid.Column="1" FontSize="14" Name="replaceButton"/>
        </Grid>
        <StackPanel Margin="10" Grid.Row="2">
            <Label FontWeight="Bold">Text Types</Label>
            <CheckBox IsChecked="{Binding Path=ShowText, ElementName=MainControlWindow}" Name="showText" Content="Show Text" />
            <CheckBox IsChecked="{Binding Path=ShowMText, ElementName=MainControlWindow}" Name="showMText" Content="Show Multi-Line Text" />
            <CheckBox IsChecked="{Binding Path=ShowMLeader, ElementName=MainControlWindow}" Name="showMLeader" Content="Show Multi-Leader Text" />
            <CheckBox IsChecked="{Binding Path=ShowDimension, ElementName=MainControlWindow}" Name="showDimension" Content="Show Dimensions" />
        </StackPanel>
        <Grid Margin="10" Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            <Button Content="Refresh" Grid.Column="1" FontSize="14" Name="Refresh" Click="refreshButton_Click"/>
        </Grid>
        <DataGrid Name="DataGrid" ItemsSource="{Binding Path=Texts, ElementName=MainControlWindow}" SelectedCellsChanged="DataGrid_SelectedCellsChanged" SelectionMode="Extended" CanUserResizeRows="False"  AutoGenerateColumns="False" Grid.Row="4">
            <DataGrid.Resources>
                <Style TargetType="DataGridRow">
                    <Setter Property="IsSelected"
                    Value="{Binding IsSelected}" />
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Binding="{Binding FriendlyType}" Width="100" IsReadOnly="True" CanUserResize="False" />
                <DataGridTextColumn Header="Original Text" Binding="{Binding OriginalText}" Width="1*" IsReadOnly="True"  />
                <DataGridTemplateColumn Width="75" CanUserResize="False" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Jump To" FontSize="12" Name="btnJumpTo" Click="btnJumpTo_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="New Text" Binding="{Binding NewText}" Width="1*" />
                <DataGridTemplateColumn Width="60" CanUserResize="False">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox IsChecked="{Binding NewMask}" IsEnabled="{Binding CanBeMasked}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Margin="10" Grid.Row="5" Visibility="{Binding Path=HasAnySelection, ElementName=MainControlWindow}">
            <Grid.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="2,0,2,0" />
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Mask Selected" Grid.Column="0" FontSize="12" Name="btnMask" Click="btnMask_Click"/>
            <Button Content="Unmask Selected" Grid.Column="1" FontSize="12" Name="btnUnmask" Click="btnUnmask_Click"/>
        </Grid>
        <Grid Margin="10" Grid.Row="6">
            <Grid.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Margin" Value="2,0,2,0" />
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Button Content="Strip New Lines" Grid.Column="0" FontSize="12" Name="btnStrip" Click="btnStrip_Click"/>
            <Button Content="Execute Changes" Grid.Column="1" FontSize="12" Name="btnExecuteChanges" Click="btnExecute_Click"/>
        </Grid>
    </Grid>
</Window>
